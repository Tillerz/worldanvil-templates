<div class='container-fluid sheet-daggerheart-environment'>
  <div class='row'>
    <div class='col-12'>
      <div class='card environment' id='card-environment'>
        {% set img = variables.img| default %}{% set wd = 12 %}{% if img > 0 %}{% set wd = 8 %}{% endif %}
        {% set type = "Tier " ~ variables.tier|default ~ " " ~ variables.type|default %}
        <div class='card-header environment'>{{variables.name|default}} - {{type}}</div>
        <div class='card-body of'>
          <div class='row'>
            <div class='col-12 col-md-{{wd}}'>
              {{variables.description|default}}<br><br>
                <b>Impulses</b>: {{variables.impulses|default}}<br>
                <hr>
<b>Difficulty</b>: {{variables.difficulty|default}}<br>
<b>Potential Adversaries</b>: {{variables.adversaries|default}}
<hr>
                <h4>Features</h4>
                {{variables.features|default|nl2br}}
            </div>
            {% if img > 0 %}
            <div class='col-12 col-md-4 hidden-xs hidden-sm d-none d-md-block'>
              [img:{{variables.img|default}}]
            </div>
            {% endif %}
          </div>
        </div>
      </div>
    </div>
  </div>
  {% if variables.notes|default != "" %}
  <div class='row'>
    <div class='col-12'>
      <div class='card notes' id='card-notes'>
        <div class='card-header notes'>Notes</div>
        <div class='card-body of'>
          <div class='var od var-notes'> {{variables.notes|default|nl2br}} </div>
        </div>
      </div>
    </div>
  </div>
  {% endif %}
</div>