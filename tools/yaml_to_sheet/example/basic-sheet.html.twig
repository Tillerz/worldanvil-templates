{% import _self as sheet %}
{% set attribute_list = [ 'Brawn', 'Agility', 'Mind' ] %}
<div class='container-fluid sheet-my-mini-sheet'>
  <div class='row'>
    <div class='col-12 col-md-6'>
      <span class='text'><h1>Test Sheet</h1></span>
    </div>
    <br class='linebreak'>
    <div class='col-12 col-md-6'>
      <img class='image' src='/uploads/images/yoursystemlogo.webp' title='Your RPG System Logo' width='250px'>
    </div>
  </div>
  <div class='row'>
    <div class='col-12'>
      <div class='card personal' id='card-personal'>
        <div class='card-header personal'>Personal Data</div>
        <div class='card-body of'>
          <table class='table'>
            <tr><th class='lbl od lbl-name'> Name </th><td class='var od var-name'> {{variables.name|default}} </td></tr>
            <tr><th class='lbl ev lbl-class'> Class </th><td class='var ev var-class'> {{variables.class|default}} </td></tr>
            <tr><th class='lbl od lbl-level c'> Level </th><td class='var od var-level c'>{{variables.level|default}}</td></tr>
            <tr><th class='lbl ev lbl-species'> Species </th><td class='var ev var-species'> {{variables.species|default}} </td></tr>
            <tr><th class='lbl od lbl-profession'> Profession </th><td class='var od var-profession'> {{variables.profession|default}} </td></tr>
            <tr><th class='lbl ev lbl-portrait'> Portrait </th><td class='var ev var-portrait'>[img:{{variables.portrait|default}}]</td></tr>
          </table>
        </div>
      </div>
    </div>
  </div>
  <div class='row'>
    <div class='col-12 col-md-12'>
      <div class='card attributes' id='card-attributes'>
        <div class='card-body of'>
          {% for i in attribute_list %}
            {% set id = i|lower|replace({' ': '_'}) %}
            {% set eo = 'od' %}{% if id is even %}{% set eo = 'ev' %}{% endif %}
            <div class='lbl {{eo}} lbl-value'> Value </div><div class='var {{eo}} var-value'>{% set curr = attribute(variables, 'value_' ~ id)|default %}{% for i in 1..10 %}{% if i <= curr %}<i class='fa-solid fa-square'></i>{% else %}<i class='fa-regular fa-square'></i>{% endif %}{% endfor %}</div>
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
  <div class='row'>
    <div class='col-12 col-md-6'>
      <div class='card belongings' id='card-belongings'>
        <div class='card-header belongings'>Inventory</div>
        <div class='card-body of'>
          <table class='table'>
          <tr>
          <th class='lbl od lbl-item-name'> Name </th>
          <th class='lbl od lbl-item-weight ' width='60px'> Weight </th>
          <th class='lbl od lbl-item-stowed ' width='30px'> Stowed </th>
          </tr>
          {% for i in 1..15 %}
            {% set id = i %}{% if id < 10 %}{% set id = '0' ~ id %}{% endif %}{% if id < 100 %}{% set id = '0' ~ id %}{% endif %}
            {% set eo = 'od' %}{% if id is even %}{% set eo = 'ev' %}{% endif %}
          <tr>
          <tr><td class='var {{eo}} var-item-name'> {{attribute(variables, 'item_name_' ~ id)|default}} </td><td class='var {{eo}} var-item-weight'>{{attribute(variables, 'item_weight_' ~ id)|default}}</td><td class='var {{eo}} var-item-stowed c'>{% if attribute(variables, 'item_stowed_' ~ id)|default|default == 1 %}<i class='fa-regular fa-square-check'></i>{% else %}<i class='fa-regular fa-square'></i>{% endif %}</td>
          </tr>
          {% endfor %}
          </tr>
          </table>
        </div>
      </div>
    </div>
    <div class='col-12 col-md-6'>
      <div class='card weapons' id='card-weapons'>
        <div class='card-header weapons'>Weapons</div>
        <div class='card-body of'>
          <table class='table'>
          <tr>
          <th class='lbl od lbl-weapon-name'> Name </th>
          <th class='lbl od lbl-weapon-weight ' width='60px'> Weight </th>
          <th class='lbl od lbl-weapon-stowed ' width='30px'> Stowed </th>
          </tr>
          {% for i in 1..5 %}
            {% set id = i %}{% if id < 10 %}{% set id = '0' ~ id %}{% endif %}{% if id < 100 %}{% set id = '0' ~ id %}{% endif %}
            {% set eo = 'od' %}{% if id is even %}{% set eo = 'ev' %}{% endif %}
          <tr>
          <tr><td class='var {{eo}} var-weapon-name'> {{attribute(variables, 'weapon_name_' ~ id)|default}} </td><td class='var {{eo}} var-weapon-weight'>{{attribute(variables, 'weapon_weight_' ~ id)|default}}</td><td class='var {{eo}} var-weapon-stowed c'>{% if attribute(variables, 'weapon_stowed_' ~ id)|default|default == 1 %}<i class='fa-regular fa-square-check'></i>{% else %}<i class='fa-regular fa-square'></i>{% endif %}</td>
          </tr>
          {% endfor %}
          </tr>
          </table>
        </div>
      </div>
      <div class='card armor' id='card-armor'>
        <div class='card-header armor'>Armor</div>
        <div class='card-body of'>
          <table class='table'>
            {% for i in 1..5 %}
              {% set id = i %}{% if id < 10 %}{% set id = '0' ~ id %}{% endif %}{% if id < 100 %}{% set id = '0' ~ id %}{% endif %}
              {% set eo = 'od' %}{% if id is even %}{% set eo = 'ev' %}{% endif %}
              <tr><th class='lbl {{eo}} lbl-armor-name'> Name </th><td class='var {{eo}} var-armor-name'> {{attribute(variables, 'armor_name_' ~ id)|default}} </td></tr>
              <tr><th class='lbl {{eo}} lbl-armor-weight ' width='60px'> Weight </th><td class='var {{eo}} var-armor-weight'>{{attribute(variables, 'armor_weight_' ~ id)|default}}</td></tr>
              <tr><th class='lbl {{eo}} lbl-armor-stowed ' width='30px'> Stowed </th><td class='var {{eo}} var-armor-stowed c'>{% if attribute(variables, 'armor_stowed_' ~ id)|default|default == 1 %}<i class='fa-regular fa-square-check'></i>{% else %}<i class='fa-regular fa-square'></i>{% endif %}</td></tr>
            {% endfor %}
          </table>
        </div>
      </div>
    </div>
    <div class='col-12'>
      <div class='card notes' id='card-notes'>
        <div class='card-header notes'>Character Notes</div>
        <div class='card-body of'>
          <div class='lbl od lbl-notes'> Notes </div><div class='var od var-notes'> {{variables.notes|default|nl2br}} </div>
        </div>
      </div>
    </div>
  </div>
  <br class='linebreak'>
  <hr class='separator'>
  <br class='linebreak'>
    <div class='row do-not-print'>
      <div class='col-12 c small'>
        <br>
        Sheet made by Tillerz - Updated: 2025-11-22</a><br>
      </div>
    </div>
</div>
